@model CoreSimpam.ViewModel.UserViewModel

<form asp-action="Edit" asp-controller="User" id="input-form" method="post">
    <input asp-for="UserID" class="form-control col-md-8" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-header">
        <h5 class="modal-title">@ViewData["Title"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group row">
            <label asp-for="Email" class="control-label col-md-4"></label>
            <input asp-for="Email" class="form-control col-md-8" type="email" />
            <span asp-validation-for="Email" class="order-1 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="control-label col-md-4"></label>
            <input asp-for="UserName" class="form-control col-md-8" type="text" disabled />
            <span asp-validation-for="UserName" class="order-1 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="control-label col-md-4"></label>
            <input asp-for="Password" class="form-control col-md-8" type="password" disabled />
            <span asp-validation-for="Password" class="order-1 text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="RoleID" class="control-label col-md-4"></label>
            <select asp-for="RoleID" asp-items='(List<SelectListItem>)ViewData["roles"]' class="form-control col-md-8"></select>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger mr-auto" id="btn-delete" value="@Model.UserID">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>

@await Html.PartialAsync("_ValidationScriptsPartial");